// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Intervention {
  id         Int        @id @default(autoincrement())
  date       DateTime
  duree      Int
  projetId   Int
  salarieId  Int

  projet     Projet     @relation(fields: [projetId], references: [id], onDelete: Cascade)
  salarie    Salarie    @relation(fields: [salarieId], references: [id], onDelete: Cascade)
  materiels  Materiel[]

  @@map("interventions")
}

model Projet {
  id              Int              @id @default(autoincrement())
  nom             String
  clientId        Int?             @unique // 1 client â†’ 0..1 projet
  client          Client?          @relation(fields: [clientId], references: [id], onDelete: SetNull)
  interventions   Intervention[]

  @@map("projets")
}

model Client {
  id         Int       @id @default(autoincrement())
  adresse    String
  projet     Projet?   // 1 client peut avoir 0..1 projet

  @@map("clients")
}

model Salarie {
  id             Int             @id @default(autoincrement())
  nom            String
  prenom         String
  interventions  Intervention[]

  @@map("salaries")
}

model Materiel {
  id              Int           @id @default(autoincrement())
  designation     String
  interventionId  Int
  intervention    Intervention   @relation(fields: [interventionId], references: [id], onDelete: Cascade)

  @@map("materiels")
}
